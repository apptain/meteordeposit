table 
  width 100%
  margin .75em 0
  thead 
    border-bottom 1px solid //$c-medium-low
    border-top 1px solid //$c-medium-low
    text-transform uppercase
    thfirst-child 
      padding-left .5em
    
  
  tbody 
    tr 
      & + tr 
        border-top 1px solid 
      
      &nth-child(odd) 
        background $c-empty
      
      td 
        padding .5em 1em .5em 0
        small()
        input 
          height 24px
        
      
    
  


